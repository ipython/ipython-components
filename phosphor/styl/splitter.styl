.p-Splitter > .p-Widget {
  z-index: 0;
}


.p-SplitterHandle {
  box-sizing: border-box;
  position: absolute;
  z-index: 1;
  &.p-mod-hidden {
    display: none;
  }
  &.p-mod-horizontal {
    cursor: ew-resize;
    > .p-SplitterHandle-overlay {
      min-width: 7px;
      left: 50%;
      transform: translateX(-50%);
    }
  }
  &.p-mod-vertical {
    cursor: ns-resize;
    > .p-SplitterHandle-overlay {
      min-height: 7px;
      top: 50%;
      transform: translateY(-50%);
    }
  }
}


.p-SplitterHandle-overlay {
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
